screengui.Parent = player.PlayerGui

-- Create a TextButton
local mainintobutton = Instance.new("TextButton")
mainintobutton.Name = "mainintobutton"
mainintobutton.Text = "Click to get to mod menu"
mainintobutton.Parent = screengui
